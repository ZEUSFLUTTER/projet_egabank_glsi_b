          }
        },
        {
          "name": "Transfert",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/api/transactions/transfert?compteSourceId=1&compteDestinationId=2&montant=25.00&description=Virement"
            }
          }
        },
        {
          "name": "GET transactions by compte",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/transactions/compte/1" }
          }
        },
        {
          "name": "GET all transactions",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/transactions" }
          }
        },
        {
          "name": "GET transaction by id",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/transactions/1" }
          }
        }
      ]
    },
    {
      "name": "Releves",
      "item": [
        {
          "name": "Generate releve PDF",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/releves/compte/1" }
          }
        }
      ]
    },
    {
      "name": "Client (authenticated)",
      "item": [
        {
          "name": "GET dashboard",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/client/dashboard" }
          }
        },
        {
          "name": "GET client comptes",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/client/comptes" }
          }
        },
        {
          "name": "GET client transactions",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/api/client/transactions" }
          }
        },
        {
          "name": "GET client notifications",
          "request": {
            "method": "GET",
