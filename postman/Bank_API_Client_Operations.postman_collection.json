{
	"info": {
		"_postman_id": "bank-api-client-operations",
		"name": "Bank API - Opérations Client (Conforme Cahier des Charges)",
		"description": "Collection conforme au cahier des charges : opérations bancaires pour un client connecté",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080/api",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "mon_compte_numero",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "1. Authentification Client",
			"item": [
				{
					"name": "Login Client",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('auth_token', response.token);",
									"    pm.test('Login client réussi', function () {",
									"        pm.expect(response.token).to.not.be.empty;",
									"    });",
									"} else {",
									"    pm.test('Login échoué', function () {",
									"        pm.expect.fail('Le login client devrait réussir');",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"client1\",\n    \"password\": \"password\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "2. Profil et Comptes du Client",
			"item": [
				{
					"name": "Mon Profil",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/client/mon-profil",
							"host": ["{{base_url}}"],
							"path": ["client", "mon-profil"]
						}
					}
				},
				{
					"name": "Mes Comptes",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const comptes = pm.response.json();",
									"    if (comptes.length > 0) {",
									"        pm.collectionVariables.set('mon_compte_numero', comptes[0].numeroCompte);",
									"        pm.test('Comptes récupérés', function () {",
									"            pm.expect(comptes).to.be.an('array');",
									"            pm.expect(comptes.length).to.be.greaterThan(0);",
									"        });",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/client/mes-comptes",
							"host": ["{{base_url}}"],
							"path": ["client", "mes-comptes"]
						}
					}
				}
			]
		},
		{
			"name": "3. Opérations Bancaires Client",
			"item": [
				{
					"name": "Faire un Versement sur Mon Compte",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Versement effectué avec succès', function () {",
									"    pm.response.to.have.status(201);",
									"    const response = pm.response.json();",
									"    pm.expect(response.typeTransaction).to.eql('DEPOT');",
									"    pm.expect(response.montant).to.eql(50000);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"montant\": 50000,\n    \"description\": \"Versement sur mon compte\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/client/mes-comptes/{{mon_compte_numero}}/depot",
							"host": ["{{base_url}}"],
							"path": ["client", "mes-comptes", "{{mon_compte_numero}}", "depot"]
						}
					}
				},
				{
					"name": "Faire un Retrait sur Mon Compte",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Retrait effectué avec succès', function () {",
									"    pm.response.to.have.status(201);",
									"    const response = pm.response.json();",
									"    pm.expect(response.typeTransaction).to.eql('RETRAIT');",
									"    pm.expect(response.montant).to.eql(25000);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"montant\": 25000,\n    \"description\": \"Retrait de mon compte\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/client/mes-comptes/{{mon_compte_numero}}/retrait",
							"host": ["{{base_url}}"],
							"path": ["client", "mes-comptes", "{{mon_compte_numero}}", "retrait"]
						}
					}
				},
				{
					"name": "Faire un Virement d'un de Mes Comptes",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Virement effectué avec succès', function () {",
									"    pm.response.to.have.status(201);",
									"    const response = pm.response.json();",
									"    pm.expect(response).to.be.an('array');",
									"    pm.expect(response.length).to.eql(2);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"compteSource\": \"{{mon_compte_numero}}\",\n    \"compteDestinataire\": \"SN12K00100152000025000000269\",\n    \"montant\": 10000,\n    \"description\": \"Virement vers un autre compte\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/client/mes-comptes/virement",
							"host": ["{{base_url}}"],
							"path": ["client", "mes-comptes", "virement"]
						}
					}
				}
			]
		},
		{
			"name": "4. Consultation de Mes Transactions",
			"item": [
				{
					"name": "Toutes les Transactions de Mon Compte",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/client/mes-comptes/{{mon_compte_numero}}/transactions",
							"host": ["{{base_url}}"],
							"path": ["client", "mes-comptes", "{{mon_compte_numero}}", "transactions"]
						}
					}
				},
				{
					"name": "Transactions de Mon Compte par Période",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/client/mes-comptes/{{mon_compte_numero}}/transactions?dateDebut=2024-01-01T00:00:00&dateFin=2024-12-31T23:59:59",
							"host": ["{{base_url}}"],
							"path": ["client", "mes-comptes", "{{mon_compte_numero}}", "transactions"],
							"query": [
								{
									"key": "dateDebut",
									"value": "2024-01-01T00:00:00"
								},
								{
									"key": "dateFin",
									"value": "2024-12-31T23:59:59"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "5. Impression de Mon Relevé",
			"item": [
				{
					"name": "Imprimer Mon Relevé",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Relevé généré avec succès', function () {",
									"    pm.response.to.have.status(200);",
									"    pm.expect(pm.response.text()).to.include('RELEVÉ DE COMPTE');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/client/mes-comptes/{{mon_compte_numero}}/releve?dateDebut=2024-01-01T00:00:00&dateFin=2024-12-31T23:59:59",
							"host": ["{{base_url}}"],
							"path": ["client", "mes-comptes", "{{mon_compte_numero}}", "releve"],
							"query": [
								{
									"key": "dateDebut",
									"value": "2024-01-01T00:00:00"
								},
								{
									"key": "dateFin",
									"value": "2024-12-31T23:59:59"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "6. Tests de Sécurité Client",
			"item": [
				{
					"name": "Test Accès Compte d'Autrui (Doit Échouer)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Accès refusé correctement', function () {",
									"    pm.response.to.have.status(403);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"montant\": 1000,\n    \"description\": \"Tentative d'accès non autorisé\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/client/mes-comptes/SN12K00100152000025000000999/depot",
							"host": ["{{base_url}}"],
							"path": ["client", "mes-comptes", "SN12K00100152000025000000999", "depot"]
						}
					}
				},
				{
					"name": "Test Retrait Solde Insuffisant",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Solde insuffisant détecté', function () {",
									"    pm.response.to.have.status(400);",
									"    const response = pm.response.json();",
									"    pm.expect(response.message).to.include('insuffisant');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"montant\": 999999999,\n    \"description\": \"Retrait impossible\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/client/mes-comptes/{{mon_compte_numero}}/retrait",
							"host": ["{{base_url}}"],
							"path": ["client", "mes-comptes", "{{mon_compte_numero}}", "retrait"]
						}
					}
				}
			]
		}
	]
}